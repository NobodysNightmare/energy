.panel.panel-default
  .panel-heading
    = inverter.name
    .pull-right
      %a{href: edit_inverter_path(inverter), title: I18n.t('buttons.edit')}
        %i.fa.fa-pencil
  .panel-body
    %dl.dl-horizontal
      %dt= t('.latest_reading')
      %dd
        - if inverter.latest_reading
          = format_watt_hours(inverter.latest_reading.value)
        - else
          = '-'
      %dt= t('.daily_generation')
      %dd= format_watt_hours(inverter.daily_generation)
      %dt= t('.current_power')
      %dd= format_watt(inverter.current_power)

    .row
      .col-md-12
        .pull-right
          %a.btn.btn-default.btn-sm{href: inverter_readings_path(inverter)}
            = I18n.t('buttons.readings')
  .panel-footer
    = t('.refreshed_at', time: l(inverter.latest_reading.time, format: :time))
    %abbr{title: l(inverter.latest_reading.time)}
      = "(#{I18n.t('time_ago', time: time_ago_in_words(inverter.latest_reading.time))})"
