.panel.panel-default
  .panel-heading
    - if @inverter.new_record?
      = I18n.t('titles.new_model', model: Inverter.model_name.human)
    - else
      = I18n.t('titles.edit_model', model: Inverter.model_name.human)
  .panel-body
    = form_for @inverter do |f|
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'

      .form-group
        = f.label :serial
        = f.text_field :serial, class: 'form-control'

      .form-group
        = f.label :capacity
        = f.text_field :capacity, class: 'form-control'

      = f.submit I18n.t('buttons.save'), class: 'btn btn-success'

- unless @inverter.new_record?
  .panel.panel-danger
    .panel-heading
      = I18n.t('titles.destroy_model', model: Inverter.model_name.human)
    .panel-body
      = link_to I18n.t('buttons.delete'), inverter_path(@inverter),
                method: :delete,
                class: 'btn btn-danger btn-sm',
                data: { confirm: I18n.t('confirm_delete_named', name: @inverter.name) }
