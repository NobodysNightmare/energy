%h1= Meter.model_name.human(count: 2)

.row
  - @active_meters.each do |meter|
    .col-lg-6
      = render 'meter', meter: meter, active: true

.row
  - @inactive_meters.each do |meter|
    .col-lg-6
      = render 'meter', meter: meter, active: false

.row
  .col-lg-2
    = link_to({ controller: :meters, action: :new, site_id: params[:site_id] }, class: 'btn btn-primary') do
      = I18n.t('buttons.create_model', model: Meter.model_name.human)
